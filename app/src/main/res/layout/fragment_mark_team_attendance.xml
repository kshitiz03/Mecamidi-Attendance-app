<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="true">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/bg_screen2"
        android:text="Enter Employee Name:" />

    <AutoCompleteTextView
        android:id="@+id/teammark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/emp_name"
        android:textColor="@color/bg_screen2"
        android:textAlignment="center"
        android:gravity="center"
        android:theme="@style/EditTextHint"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/ripple_enable"
        android:elevation="10dp"
        android:padding="5dp"
        android:text="Mark Present"
        android:textColor="@color/bg_screen1" />
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/bg_screen2"

        android:text="Time of punching:" />
    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/bg_screen2"

        android:textSize="20dp"
        android:text="" />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/bg_screen2"
        android:textSize="20dp"
        android:textStyle="bold"

        android:text="Date of punching:" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="@color/bg_screen2"

        android:layout_height="wrap_content"
        android:text="" />

</LinearLayout>
</ScrollView>