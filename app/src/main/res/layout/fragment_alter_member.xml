<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight=".5">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/bg_screen2"
        android:text="Add Employee " />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/EditTextHint"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColorHint="@color/bg_screen2"
            android:hint="@string/emp_name"
            android:textColor="@color/bg_screen2"
            android:layout_marginBottom="20dp"
            android:inputType="text"
            android:textAlignment="center" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/add_mem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/ripple"
        android:elevation="10dp"
        android:padding="5dp"
        android:text="Add Employee"
        android:textColor="@color/bg_screen1" />

    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight=".5">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/bg_screen2"

        android:text="Remove Employee" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/EditTextHint"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/rem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColorHint="@color/bg_screen2"
            android:hint="@string/emp_name"
            android:textColor="@color/bg_screen2"
            android:layout_marginBottom="20dp"
            android:inputType="text"
            android:textAlignment="center" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/rem_emp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/ripple"
        android:elevation="10dp"
        android:padding="5dp"
        android:text="Remove Employee"
        android:textColor="@color/bg_screen1" />
    </LinearLayout>
</LinearLayout>
