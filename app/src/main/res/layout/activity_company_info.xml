<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg_screen1">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_screen2"
        android:elevation="4dp"
        app:titleTextColor="@color/bg_screen1" />
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DCDCDC"
        android:fadeScrollbars="true">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:background="#DCDCDC"
            android:screenOrientation="portrait"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:background="#DCDCDC"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="Announcement"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextHint"
                    android:layout_marginBottom="20dp">
                    <EditText
                        android:id="@+id/ann"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:hint="Announcement"
                        android:textColorHint="@color/bg_screen2"
                        android:textSize="16sp"
                        android:inputType="text|textMultiLine"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/edit_ann"
                    android:elevation="10dp"
                    android:padding="5dp"
                    android:layout_margin="20dp"
                    android:textColor="@color/bg_screen1"
                    android:background="@drawable/ripple_enable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="Policies"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="Click to Download"/>
                <Button
                    android:id="@+id/upload_pol"
                    android:elevation="10dp"
                    android:padding="5dp"
                    android:layout_margin="20dp"
                    android:textColor="@color/bg_screen1"
                    android:background="@drawable/ripple_enable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Upload" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_screen2"
                android:minHeight="@dimen/list_item_height"
                android:orientation="horizontal"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_weight="0.5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:layout_weight="0.3"
                    android:textAlignment="center"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/bg_screen1"
                    android:layout_gravity="center_vertical"
                    android:text="Name" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical"
                    android:text="Contact No"
                    android:textAlignment="center"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/bg_screen1"
                    android:textStyle="bold" />
            </LinearLayout>
            <ListView
                android:id="@+id/list4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:drawSelectorOnTop="true"
                android:divider="@color/bg_screen2"
                android:dividerHeight="4px"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>